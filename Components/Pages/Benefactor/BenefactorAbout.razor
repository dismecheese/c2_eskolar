@page "/dashboard/benefactor/about"
@layout Layout.BenefactorDashLayout
@using Microsoft.AspNetCore.WebUtilities
@using c2_eskolar.Components.Pages
<PageTitle>About Us</PageTitle>

<div class="container py-5">
    <div class="row justify-content-center mb-4">
        <div class="col-lg-10">
            <h2 class="fw-bold text-center mb-4">What is eSkolar?</h2>
            <div class="rounded shadow-sm p-4 mx-auto mb-5 d-flex justify-content-center align-items-center"
                style="background-color: rgba(1, 75, 173, 0.85); max-width: 700px;">
                <p class="fs-5 m-0" style="color: #fff; text-align: justify; width: 100%; max-width: 600px;">
                    eSkolar combines the word "scholar" with the prefix "e-," which stands for electronic or digital. This name reflects the system’s goal of bringing scholarship-related services into one digital platform. It also honors the "Iskolar ng Bayan" identity of PUP students, updating it for the digital age while keeping its connection to the community and tradition.
                </p>
            </div>
        </div>
    </div>
    <div class="row justify-content-center mb-4">
        <div class="col-lg-10">
            <h2 class="fw-bold text-center mb-4">Who is eSkolar for?</h2>
            <div class="row g-4 justify-content-center">
                <div class="col-12 col-md-4">
                    <div class="rounded shadow-sm h-100 p-4 d-flex flex-column align-items-center text-center"
                        style="background-color: rgba(1, 75, 173, 0.85);">
                        <i class="bi bi-mortarboard-fill fs-1 mb-3" style="color: #fff;"></i>
                        <span class="fw-semibold" style="color: #fff;">For students</span>
                        <span class="small mt-2" style="color: #fff; text-align: justify;">
                            seeking academic opportunities, eSkolar provides a centralized platform to discover, track, and manage scholarship applications.
                        </span>
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="rounded shadow-sm h-100 p-4 d-flex flex-column align-items-center text-center"
                        style="background-color: rgba(1, 75, 173, 0.85);">
                        <i class="bi bi-gear-fill fs-1 mb-3" style="color: #fff;"></i>
                        <span class="fw-semibold" style="color: #fff;">For school and institution administrators</span>
                        <span class="small mt-2" style="color: #fff; text-align: justify;">
                            eSkolar streamlines the management of scholars and scholarship programs.
                        </span>
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="rounded shadow-sm h-100 p-4 d-flex flex-column align-items-center text-center"
                        style="background-color: rgba(1, 75, 173, 0.85);">
                        <i class="bi bi-card-checklist fs-1 mb-3" style="color: #fff;"></i>
                        <span class="fw-semibold" style="color: #fff;">For benefactors</span>
                        <span class="small mt-2" style="color: #fff; text-align: justify;">
                            —companies, foundations, and organizations offering scholarships—eSkolar offers tools to post opportunities, review applicants, monitor scholar outcomes, and gain insights through analytics.
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="mt-5 pt-4 border-top text-center">
        <div class="mb-2 text-muted small">
            Sitemaps. How it Works for: Steps for Students, Companies, Schools
        </div>
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-2">
            <div>
                <span class="me-2">Follow Us</span>
                <a href="#" class="text-dark me-2"><i class="bi bi-facebook"></i></a>
                <a href="#" class="text-dark me-2"><i class="bi bi-twitter"></i></a>
                <a href="#" class="text-dark me-2"><i class="bi bi-instagram"></i></a>
            </div>
            <div>
                <span class="me-2">Contact Us</span>
                <span class="text-muted small">eskolarph@gmail.com</span>
            </div>
        </div>
    </footer>
</div>