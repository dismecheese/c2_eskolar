        letter-spacing: 0.5px;
    }

    /* Loading */
    .spinner-border {
        width: 3rem;
        height: 3rem;
        border-width: 0.3rem;
        border-color: #1560d4;
        border-right-color: transparent;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .search-header-section {
            padding: 1rem;
        }

        .tab-pills {
            flex-direction: column;
            width: 100%;
        }

        .tab-pill {
            width: 100%;
            justify-content: center;
        }
    }
