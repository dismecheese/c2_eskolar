        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .tab-pills {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .tab-pill {
        background: linear-gradient(135deg, #fff 0%, #f8fafc 100%);
        color: #4a5568;
        border: 2px solid #e2e8f0;
        padding: 0.75rem 1.5rem;
        border-radius: 25px;
        font-weight: 600;
        font-size: 0.95rem;
        cursor: pointer;
        transition: all 0.3s ease;
