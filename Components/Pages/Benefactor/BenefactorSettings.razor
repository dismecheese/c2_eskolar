@page "/dashboard/benefactors/settings"
@layout Layout.BenefactorDashLayout

<PageTitle>Settings</PageTitle>

<div class="settings-container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="settings-card p-4 mb-4">
                <div class="d-flex align-items-center mb-4">
                    <div class="profile-pic rounded-circle bg-secondary me-3" style="width:64px; height:64px; display:flex; align-items:center; justify-content:center;">
                        <svg width="40" height="40" fill="#fff"><circle cx="20" cy="16" r="10"/><rect x="8" y="28" width="24" height="8" rx="4"/></svg>
                    </div>
                    <div>
                        <div class="fw-bold fs-5">Ralph Student</div>
                        <div class="text-muted">Student</div>
                    </div>
                </div>
                <form>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Email</label>
                        <input type="email" class="form-control" placeholder="Enter your email" value="ralph@student.edu" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Phone Number</label>
                        <input type="text" class="form-control" placeholder="Enter your phone number" value="+63 900 000 0000" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Password</label>
                        <input type="password" class="form-control" placeholder="Change password" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">University</label>
                        <input type="text" class="form-control" placeholder="Your university" value="Sample University" />
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
.settings-container {
    background: #f7f9fa;
    min-height: 100vh;
}
.settings-card {
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(60,60,60,0.07);
}
.profile-pic {
    background: #3976c6 !important;
}
</style>