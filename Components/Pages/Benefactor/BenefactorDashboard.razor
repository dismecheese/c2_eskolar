    private async Task AddToRecentlyViewedAsync(int scholarshipId)
    {
        try
        {
            // load existing ids from localStorage
            var json = await JSRuntime.InvokeAsync<string>("localStorage.getItem", RecentLocalStorageKey);
            if (!string.IsNullOrWhiteSpace(json))
            {
                try
                {
                    recentlyViewedIds = System.Text.Json.JsonSerializer.Deserialize<List<int>>(json) ?? new List<int>();
                }
                catch
                {
                    recentlyViewedIds = new List<int>();
                }
            }

            // add to front, remove duplicates
            recentlyViewedIds.RemoveAll(id => id == scholarshipId);
            recentlyViewedIds.Insert(0, scholarshipId);

            // keep last 12
            if (recentlyViewedIds.Count > 12)
                recentlyViewedIds = recentlyViewedIds.Take(12).ToList();

            // persist
            var toSave = System.Text.Json.JsonSerializer.Serialize(recentlyViewedIds);
            await JSRuntime.InvokeVoidAsync("localStorage.setItem", RecentLocalStorageKey, toSave);

            // refresh list in UI
            await LoadRecentlyViewedAsync();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error updating recently viewed: {ex.Message}");
        }
    }

    private async Task LoadRecentlyViewedAsync()
    {
        try
        {
            recentlyViewedIds = new List<int>();
            recentlyViewedScholarships = new List<Scholarship>();

            var json = await JSRuntime.InvokeAsync<string>("localStorage.getItem", RecentLocalStorageKey);
            if (string.IsNullOrWhiteSpace(json))
                return;

            try
            {
                recentlyViewedIds = System.Text.Json.JsonSerializer.Deserialize<List<int>>(json) ?? new List<int>();
            }
            catch
            {
                recentlyViewedIds = new List<int>();
            }

            if (!recentlyViewedIds.Any())
                return;

            // fetch scholarship objects and preserve order from ids list
            var items = await DbContext.Scholarships
                .Include(s => s.Benefactor)
                .Include(s => s.Institution)
                .Include(s => s.Applications)
                .Where(s => recentlyViewedIds.Contains(s.ScholarshipId))
                .ToListAsync();

            // order according to ids
            recentlyViewedScholarships = recentlyViewedIds
                .Select(id => items.FirstOrDefault(s => s.ScholarshipId == id))
                .Where(s => s != null)
                .Cast<Scholarship>()
                .ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading recently viewed: {ex.Message}");
        }
    }

