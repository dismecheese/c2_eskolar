        }
        catch (OperationCanceledException)
        {
            return;
        }
        catch (ObjectDisposedException)
        {
            return;
        }
        finally
        {
            if (entered)
            {
                try { loadingSemaphore.Release(); } catch (ObjectDisposedException) { }
            }
        }
    }

