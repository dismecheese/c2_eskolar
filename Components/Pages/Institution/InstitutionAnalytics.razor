            myApplications = await DbContext.ScholarshipApplications
                .Include(sa => sa.Student)
                .Include(sa => sa.Scholarship)
                .Where(sa => sa.Scholarship.InstitutionProfileId == profile.InstitutionProfileId)
                .ToListAsync();

