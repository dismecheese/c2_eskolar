                // Standard patterns
                @"GWA[:=\s-]*([0-9]+\.[0-9]+)",
                @"GWA\s+is\s+([0-9]+\.[0-9]+)",
                @"GWA\s*=\s*([0-9]+\.[0-9]+)",
                @"GWA\s*-\s*([0-9]+\.[0-9]+)",
