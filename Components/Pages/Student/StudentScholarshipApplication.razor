            // Fallback: extract from text using AI for better accuracy
            var allText = "";
            if (root.TryGetProperty("analyzeResult", out var analyzeResult2) && analyzeResult2.TryGetProperty("content", out var content))
            {
                allText = content.GetString() ?? "";
