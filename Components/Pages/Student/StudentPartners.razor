@page "/dashboard/student/partners"
@attribute [Authorize(Roles = "Student")]
@layout Layout.StudentDashLayout
@using Microsoft.AspNetCore.WebUtilities
@using c2_eskolar.Components.Pages
<!-- Search Bar -->
<div class="container mb-4 mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Search" />
                <span class="input-group-text bg-white border-0">
                    <i class="bi bi-search"></i>
                </span>
            </div>
        </div>
    </div>
</div>

<ul class="nav nav-tabs mb-3" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="tab-one-tab" data-bs-toggle="tab" data-bs-target="#tab-one" type="button" role="tab" aria-controls="tab-one" aria-selected="true">
      Institutions
    </button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="tab-two-tab" data-bs-toggle="tab" data-bs-target="#tab-two" type="button" role="tab" aria-controls="tab-two" aria-selected="false">
      Benefactors
    </button>
  </li>
</ul>
<div class="tab-content border border-top-0 p-4" id="myTabContent">
  <div class="tab-pane fade show active" id="tab-one" role="tabpanel" aria-labelledby="tab-one-tab">
    <h2 class="fw-bold text-center mb-2" style="font-size:2rem;">Our Partner Institutions</h2>
    <p class="text-center mb-4" style="max-width:600px;margin:auto;">
        Here are the institutions who support our mission to connect students with academic opportunities.
    </p>
    <div class="row g-4 justify-content-center">
        @for (int i = 0; i < 6; i++)
        {
            <div class="col-12 col-sm-6 col-md-4">
                <div class="card shadow-sm border-0 h-100 d-flex flex-column align-items-center p-4" style="min-height:150px;">
                    <div class="mb-3">
                        <svg width="60" height="60" viewBox="0 0 60 60">
                            <rect width="60" height="60" fill="#E0E0E0"/>
                            <line x1="0" y1="0" x2="60" y2="60" stroke="#888" stroke-width="2"/>
                            <line x1="60" y1="0" x2="0" y2="60" stroke="#888" stroke-width="2"/>
                        </svg>
                    </div>
                    <div class="fw-semibold text-center">Institution Name</div>
                </div>
            </div>
        }
    </div>
  </div>
  <div class="tab-pane fade" id="tab-two" role="tabpanel" aria-labelledby="tab-two-tab">
    <h2 class="fw-bold text-center mb-2" style="font-size:2rem;">Meet our Partners</h2>
        <p class="text-center mb-4" style="max-width:600px;margin:auto;">
            Here are the organizations and sponsors who support our mission to connect students with academic opportunities.
        </p>
        <div class="row g-4 justify-content-center">
            @for (int i = 0; i < 9; i++)
            {
                <div class="col-12 col-sm-6 col-md-4">
                    <div class="card shadow-sm border-0 h-100 d-flex flex-column align-items-center p-4" style="min-height:150px;">
                        <div class="mb-3">
                            <svg width="60" height="60" viewBox="0 0 60 60">
                                <rect width="60" height="60" fill="#E0E0E0"/>
                                <line x1="0" y1="0" x2="60" y2="60" stroke="#888" stroke-width="2"/>
                                <line x1="60" y1="0" x2="0" y2="60" stroke="#888" stroke-width="2"/>
                            </svg>
                        </div>
                        <div class="fw-semibold text-center">Benefactor Name</div>
                    </div>
                </div>
            }
        </div>
  </div>
</div>

<div class="text-center mt-4 text-muted" style="font-size: 1rem;">
    Want to be our partner? <b>Contact us to collaborate.</b>
</div>