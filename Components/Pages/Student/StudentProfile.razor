@page "/dashboard/student/profile"
@attribute [Authorize(Roles = "Student")]
@layout Layout.StudentDashLayout

<h2 class="p-4">My Profile</h2>

<div class="container-fluid px-5">
    <button class="btn btn-primary mb-3" @onclick="ToggleEditMode">
        @(IsEditMode ? "Cancel" : "Edit Profile")
    </button>

    @if (!IsEditMode)
    {
        <!-- View Mode -->
        <div class="card p-4">
            <dl class="row">
                <dt class="col-sm-3">Full Name</dt>
                <dd class="col-sm-9">Charles Cedric C. Almadrones</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">student@example.com</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">09123456789</dd>

                <dt class="col-sm-3">Address</dt>
                <dd class="col-sm-9">123 Poblacion, Makati City</dd>

                <dt class="col-sm-3">University</dt>
                <dd class="col-sm-9">University of the Philippines</dd>

                <dt class="col-sm-3">Course</dt>
                <dd class="col-sm-9">BS Computer Science</dd>

                <dt class="col-sm-3">Year Level</dt>
                <dd class="col-sm-9">3rd Year</dd>
            </dl>
        </div>
    }
    else
    {
        <!-- Edit Mode -->
        <div class="card p-4">
            <form>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>Full Name</label>
                        <input type="text" class="form-control" value="Charles Cedric C. Almadrones" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Email</label>
                        <input type="email" class="form-control" value="student@example.com" disabled />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Phone</label>
                        <input type="text" class="form-control" value="09123456789" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Address</label>
                        <input type="text" class="form-control" value="123 Poblacion, Makati City" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>University</label>
                        <input type="text" class="form-control" value="University of the Philippines" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Course</label>
                        <input type="text" class="form-control" value="BS Computer Science" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Year Level</label>
                        <select class="form-control">
                            <option selected>3rd Year</option>
                            <option>1st Year</option>
                            <option>2nd Year</option>
                            <option>4th Year</option>
                            <option>Graduate</option>
                        </select>
                    </div>
                </div>

                <button type="submit" class="btn btn-success">Save</button>
            </form>
        </div>
    }
</div>

@code {
    private bool IsEditMode = false;

    private void ToggleEditMode()
    {
        IsEditMode = !IsEditMode;
    }
}
