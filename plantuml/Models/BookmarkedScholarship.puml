@startuml
class BookmarkedScholarship {
    + BookmarkId : int <<get>> <<set>>
    + <<required>> UserId : string <<get>> <<set>>
    + ScholarshipId : int <<get>> <<set>>
    + BookmarkReason : string? <<get>> <<set>> = "Interested"
    + IsUrgent : bool <<get>> <<set>> = false
    + Priority : int <<get>> <<set>> = 2
    + Notes : string? <<get>> <<set>>
    + MatchScore : decimal <<get>> <<set>> = 0
    + Tags : string? <<get>> <<set>>
    + EnableDeadlineReminders : bool <<get>> <<set>> = true
    + ReminderDaysBefore : int <<get>> <<set>> = 7
}
enum BookmarkStatus {
    Bookmarked= 0,
    ReadyToApply= 1,
    InProgress= 2,
    Applied= 3,
    UnderReview= 4,
    Accepted= 5,
    Rejected= 6,
    Expired= 7,
    Withdrawn= 8,
}
BookmarkedScholarship o-> "Scholarship" Scholarship
BookmarkedScholarship o-> "CreatedAt" DateTime
BookmarkedScholarship --> "LastViewedAt" DateTime
BookmarkedScholarship o-> "Status" BookmarkStatus
BookmarkedScholarship --> "UpdatedAt" DateTime
@enduml
